<Window Name="ESD_ToolKit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ESD ToolKit" Height="562" Width="716" ResizeMode="CanMinimize">
	<Grid>
		<Grid.Background>
			<LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
				<GradientStop Color="#FF00A6DD"/>
				<GradientStop Color="#FF00A6DD" Offset="1.5"/>
				<GradientStop Color="#FF0081AC" Offset="0.100"/>
			</LinearGradientBrush>
		</Grid.Background>
		<Grid>
			<StackPanel Orientation="Vertical">
				<StackPanel Margin="0,0,0,5">
					<Label Margin="0,30,0,0" Width="630" Foreground="White" FontFamily="Segoe UI Light" FontStretch="SemiCondensed" FontWeight="Thin" TextOptions.TextFormattingMode="Display">
						<TextBlock TextWrapping="WrapWithOverflow" FontSize="32">
							Done
						</TextBlock>
					</Label>
				</StackPanel>
				<StackPanel Margin="45,0,0,0">
					<Grid>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="Auto" />
							<ColumnDefinition Width="Auto" />
						</Grid.ColumnDefinitions>
						<Image Name="CheckMarkEnd" Width="100" Height="100"/>
						<TextBlock Margin="25,30,0,0" Width="620" TextWrapping="WrapWithOverflow" Foreground="White" FontSize="25" FontFamily="Segoe UI Light" TextOptions.TextFormattingMode="Display" Grid.Column="1">We successfully converted your ESD File!</TextBlock>
					</Grid>
				</StackPanel>
			</StackPanel>
		</Grid>
		<StackPanel Orientation="Vertical" Margin="10,454,35,10">
			<Button Name="button" Content="Finish" Height="25" Margin="554,20,5,0" IsDefault="True"/>
		</StackPanel>
	</Grid>
</Window>