<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Name="AskDestinationPath">
	<Grid>
		<Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="#FF00A6DD"/>
				<GradientStop Color="#FF00A6DD" Offset="1.5"/>
                <GradientStop Color="#FF0081AC" Offset="0.100"/>
            </LinearGradientBrush>
        </Grid.Background>
		<StackPanel Orientation="Vertical">
			<StackPanel Margin="0,0,0,5">
				<Label Margin="0,30,0,0" Width="630" Foreground="White" FontFamily="Segoe UI Light" FontStretch="SemiCondensed" FontWeight="Thin" TextOptions.TextFormattingMode="Display">
					<TextBlock TextWrapping="WrapWithOverflow" FontSize="32">
						Do you want to use a custom Destination Path?
					</TextBlock>
				</Label>
				<TextBlock Width="620" TextWrapping="WrapWithOverflow" FontSize="12" Foreground="LightGray" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display">
					You can specify a custom Destination Path for your ISO file.
				</TextBlock>
			</StackPanel>
			<StackPanel Margin="5,15,35,0">
				<RadioButton Name="NoCustomPath" Padding="6,-3,0,0" GroupName="Group5" HorizontalAlignment="Left" Margin="35,15,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.5,0.5" Foreground="White" IsChecked="True" UseLayoutRounding="False" Content="No" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display"/>
				<TextBlock Margin="55,5,0,0" Width="620" TextWrapping="WrapWithOverflow" FontSize="12" Foreground="White" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display">No, place the ISO file in the current folder.</TextBlock>
				<RadioButton Name="CustomPath" Padding="6,0,0,0" GroupName="Group5" HorizontalAlignment="Left" Margin="35,15,0,0" VerticalAlignment="Top" FontSize="15" RenderTransformOrigin="0.5,0.5" Foreground="White" IsChecked="False" UseLayoutRounding="False" Content="Yes" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display"/>
				<TextBlock Margin="55,5,0,0" Width="620" TextWrapping="WrapWithOverflow" FontSize="12" Foreground="White" FontFamily="Segoe UI" TextOptions.TextFormattingMode="Display">Yes, I want to specify a custom destination path.</TextBlock>
			</StackPanel>
		</StackPanel>
		<StackPanel Orientation="Vertical" Margin="10,454,35,10">
			<Button Name="button2" Content="Back" Height="25" Margin="449,20,110,0" IsDefault="False"/>
		</StackPanel>
		<StackPanel Orientation="Vertical" Margin="10,454,35,10">
			<Button Name="button" Content="Next" Height="25" Margin="554,20,5,0" IsDefault="True"/>
		</StackPanel>
	</Grid>
</UserControl>